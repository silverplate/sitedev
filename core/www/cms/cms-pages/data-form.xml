<?xml version="1.0"?>
<!DOCTYPE form SYSTEM "../../../templates/entities.dtd">

<form>
    <element name="title" type="string" is-required="true">
        <label>Название</label>
    </element>

    <element name="tag" type="folder" is-required="true">
        <label>Тэг</label>
        <description>Можно использовать латинские буквы, цифры и&nbsp;знак подчеркивания.</description>
    </element>

    <element name="front_data_content_type_id" type="chooser">
        <label>Тип данных</label>
    </element>

    <element name="content" type="text">
        <label>Содержание</label>
    </element>

    <element name="front_controller_id" type="chooser">
        <label>Контроллер</label>
    </element>

    <element name="apply_type_id" type="chooser">
        <label>Добавить информацию</label>
    </element>

    <element name="is_mount" type="boolean">
        <label>Редактировать на&nbsp;странице документа</label>
        <value>1</value>
    </element>

    <element name="is_published" type="boolean">
        <label>Показывать</label>
        <value>1</value>
    </element>
</form>
