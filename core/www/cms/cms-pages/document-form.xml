<?xml version="1.0"?>
<!DOCTYPE form SYSTEM "../../../templates/entities.dtd">

<form>
    <group name="main">
        <title>Страница</title>

        <element name="title" type="string" is-required="true">
            <label>Название</label>
        </element>

        <element name="title_compact" type="word">
            <label>Компактное название</label>
            <description>Будет использоваться в&nbsp;навигации вместо длинного названия.</description>
        </element>

        <element name="folder" type="folder" is-required="true">
            <label>Папка</label>
            <description>Можно использовать латинские буквы, цифры и&nbsp;знак подчеркивания.</description>
        </element>

        <element name="link" type="string">
            <label>Ссылка</label>
        </element>

        <element name="parent_id" type="single_tree">
            <label>Раздел</label>
        </element>

        <element name="is_published" type="boolean">
            <label>Публиковать</label>
            <value>1</value>
        </element>
    </group>

    <group name="content">
        <title>Содержание</title>
    </group>

    <group name="files">
        <title>Файлы</title>

        <element name="files" type="adding_files">
            <label>Файлы</label>
        </element>
    </group>

    <group name="system">
        <title>Настройки</title>

        <element name="navigations" type="multiple">
            <label>Добавлять в&nbsp;навигацию</label>
        </element>

        <element name="front_controller_id" type="chooser">
            <label>Контроллер</label>
        </element>

        <element name="front_template_id" type="chooser">
            <label>Шаблон</label>
        </element>
    </group>
</form>
