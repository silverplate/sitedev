<?xml version="1.0" encoding="utf-8"?>

<form>
	<group name="main">
		<title>Основное</title>

		<element name="title" type="string" is_required="true">
			<label>Название</label>
		</element>

		<element name="filename" type="filename" is_required="true">
			<label>Имя файла</label>
		</element>

		<element name="type_id" type="chooser">
			<label>Для</label>
			<options>
				<item value="2">блоков данных</item>
				<item value="1">страниц</item>
				<item value="3"><![CDATA[страниц по&nbsp;умолчанию]]></item>
			</options>
		</element>

		<element name="is_multiple" type="boolean">
			<label><![CDATA[Возможно использование для&nbsp;нескольких элементов]]></label>
		</element>

		<element name="is_published" type="boolean">
			<label>Показывать</label>
			<value>1</value>
		</element>
	</group>

	<group name="content">
		<title>Код</title>

		<element name="content" type="large_text" />
	</group>
</form>
